<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvDetailLabelYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inspection_year_label"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDetailYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        android:text="2019"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tvDetailHazardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hazardous_label"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDetailHazard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="MODERTE"
        android:textSize="17sp"/>

</LinearLayout>